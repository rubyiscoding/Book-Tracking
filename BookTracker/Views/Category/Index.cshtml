@model IEnumerable<BookTracker.Entities.Category>

@if (Model.Count() > 0)
{
    <a href="@Url.Action("Create", "Category")" class="btn btn-success btn-sm">
        <i class="fa fa-plus"></i> <span style="font-weight:bold;">Add new category</span>
    </a>

    <table class="table table-condensed table-responsive table-striped table-hover table-sm table-search">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameToken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameToken)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                    <td class="dropdown">
                        <a class="dropdown-toggle" type="button" data-toggle="dropdown" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-fw fa fa-ellipsis-v"></i></a>
                        <ul class="dropdown-menu dropdown-menu-left">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Details", "Category", new { id = item.Id })">
                                    <i class="fa fa-file" style="color:deepskyblue;"></i>
                                    <span>View Details</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Edit", "Category", new { id = item.Id })">
                                    <i class="fa fa-edit" style="color:green;"></i>
                                    <span>Edit</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Delete", "Category", new { id = item.Id })">
                                    <i class="fa fa-trash" style="color:red;"></i>
                                    <span>Delete</span>
                                </a>
                            </li>
                        </ul>
                    </td>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="col-md-12 text-center alert-danger" style="margin-top: 15px;padding-top:5px;">
        <p>Sorry No Categories are being added at this moment. Please @Html.ActionLink("Add new category.", "Create") for tracking.</p>
    </div>
}

<style>
    .btn-xs {
        padding: 1px 5px;
        font-size: 12px;
        line-height: 1.5;
    }

    .table-search {
        margin-top: 15px;
        margin-bottom: 15px;
    }
</style>

